@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}

@{
    if (Model.Count() > 0)
    {


        <form asp-action="Index" method="get">
            <div class="form-group d-flex ">
                <input class="form-control" type="text" name="Search" placeholder="Users's Name" />
                <button type="submit" class="btn btn-light">Search</button>
            </div>

        </form>

        <table class="table table-striped table-hover mt-5">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(U => U.Id)</th>
                    <th>@Html.DisplayNameFor(U => U.FName)</th>
                    <th>@Html.DisplayNameFor(U => U.LName)</th>
                    <th>@Html.DisplayNameFor(U => U.Email)</th>
                    <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(U => U.Roles)</th>

                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>

                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.FName</td>
                        <td>@user.LName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@string.Join(",",user.Roles)</td>
                        <partial name="_ButtonsPartialView" model="@user.Id.ToString()" />
                      
                    </tr>
                }

            </tbody>
        </table>


    }
    else
    {
        <div>
            <h1>There Is No Users</h1>
        </div>
    }
}

