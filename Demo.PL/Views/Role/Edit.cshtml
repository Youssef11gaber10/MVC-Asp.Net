@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit  @Model.RoleName Data</h1>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">


    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input  class="form-control" asp-for="Id" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input  class="form-control" asp-for="RoleName" />
    </div>

    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class=" btn btn-success"> Add Or Remove User</a>


    <input type="submit" value="Save" class="btn btn-warning" /> |
    <a class="btn btn-light" asp-controller="Role" asp-action="Index">Back to list</a>


</form>

@section Validation {

    <partial name="_ValidationScriptsPartial" />
}