@model Department//you render on model of type department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Departments</h1>
<div class=" alert alert-danger" asp-validation-summary="All"> </div>

<form asp-action="Edit" method="post">

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <button type="submit" value="Save" class="btn btn-primary">Save</button>
    <a class="btn btn-light" asp-controller="Department" asp-action="Index">Back to list</a>
</form>

@section Validation {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}



