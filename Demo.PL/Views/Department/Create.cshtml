@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<br />

<form  asp-action="Create" method="post">

    <div class="form-group">
        <label  class="col-form-label" asp-for="Code"></label>
        <input class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label  class="col-form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-light"  asp-controller="Department" asp-action="Index">Back to list</a>
</form>


@section Validation {


   
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> 
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
 
}
